# Используем образ Node.js версии 14 в качестве базового образа
FROM node:16-alpine

# Устанавливаем рабочую директорию внутри контейнера
WORKDIR /app

# Копируем файлы package.json и package-lock.json в контейнер
COPY package*.json ./

# Устанавливаем зависимости
RUN npm ci

# Копируем остальные файлы проекта в контейнер
COPY . .

ENV PORT=3000
# Открываем порт, на котором будет работать телеграм-бот
EXPOSE ${PORT}

# Запускаем приложение
CMD [ "npm", "start" ]
